{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

	<div class="container-fluid" id="admin">
		<h2>Administration<br><i data-feather="user"></i></h2>
		<div class="container">
			

			<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
			  <li class="nav-item">
			    <a class="nav-link active" id="pills-posts-tab" data-toggle="pill" href="#pills-posts" role="tab" aria-controls="pills-post" aria-selected="true">Articles</a>
			  </li>
			  <li class="nav-item">
			    <a class="nav-link" id="pills-comments-tab" data-toggle="pill" href="#pills-comments" role="tab" aria-controls="pills-comments" aria-selected="false">Commentaires</a>
			  </li>
			  <li class="nav-item">
			    <a class="nav-link" id="pills-videos-tab" data-toggle="pill" href="#pills-videos" role="tab" aria-controls="pills-videos" aria-selected="false">Vidéos</a>
			  </li>
			</ul>
			<div class="tab-content" id="pills-tabContent">
			  <div class="tab-pane fade show active" id="pills-posts" role="tabpanel" aria-labelledby="pills-posts-tab">
			  	{{ include('admin/admin_posts.html.twig') }}
			  </div>
			  <div class="tab-pane fade" id="pills-comments" role="tabpanel" aria-labelledby="pills-comments-tab">
			  	{{ include('admin/admin_comments.html.twig') }}
			  </div>
			  <div class="tab-pane fade" id="pills-videos" role="tabpanel" aria-labelledby="pills-videos-tab">
			  	{{ include('admin/admin_videos.html.twig') }}
			  </div>
			</div>



		</div>
	</div>


	<div>
		<a href="{{ path('new_post') }}"><button type="button" class="btn">Nouvel article</button></a>
	</div>

	{% for post in posts %}

	<div>
		<a href="{{ path('edit_post', { 'id': post.id }) }}"><button type="button" class="btn">Editer article</button></a>
	</div>

	{% endfor %}

	<br><br>

	<div>
		<a href="{{ path('new_video') }}"><button type="button" class="btn">Nouvelle vidéo</button></a>
	</div>

	<div>
		<a href="{{ path('new_category') }}"><button type="button" class="btn">Nouvelle catégorie</button></a>
	</div>

{% endblock %}