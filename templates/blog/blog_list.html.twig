{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

	<div class="container-fluid" id="blog-list">
		<h2>Articles<br><i data-feather="file-text"></i></h2>
		<div class="container">
			<div class="row">
				{% for post in posts %}
					<div class="col-md-6 col-12" id="block-post">
						<a href="{{ path('blog_single', { 'id': post.id }) }}">
							<div id="last-post" style="background-image: url({{ asset('build/img/'~post.image|raw) }}); background-size: cover;" title="{{ post.title }}">
								<div class="block-short-post">
									<h4>{{ post.title }} <span id="post-date">{{ post.datePost|date('d-m-y') }}</span></h4>
								</div>
							</div>
						</a>	
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}